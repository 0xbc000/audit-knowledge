{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
      "@packages/*": ["./packages/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
