{
  "name": "smart-contract-auditor",
  "version": "0.1.0",
  "description": "AI-driven smart contract security audit system",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "build": "tsc -b",
    "start": "node dist/api/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src packages --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\" \"packages/**/*.ts\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx scripts/seed.ts",
    "kb:sync": "tsx scripts/sync-knowledge-base.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^9.0.0",
    "@lyuboslavlyubenov/solodit-mcp": "^1.1.1",
    "@prisma/client": "^5.9.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "bullmq": "^5.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "glob": "^10.3.10",
    "ioredis": "^5.3.2",
    "openai": "^6.17.0",
    "ora": "^8.0.1",
    "pino": "^8.18.0",
    "pino-pretty": "^13.1.3",
    "simple-git": "^3.22.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "prisma": "^5.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
